{
    "openapi": "3.0.0",
    "info": {
      "title": "Vaccination API",
      "description": "For an app that would alert you if you were to pass by a person that wasn't vaccinated. While also being able to provide you with a status on how vacinnation is going. By the voluntary insertion of data.",
      "version": "0.0.8"
    },
    
    "host": "localhost:5000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "tags":
    [
      {
        "name":"Vaccine"
      }
    ],
    "components":
    {
      "schemas":
      {
        "vaccine":
        {
          "type":"object",
          "properties":
          {
            "name": {"type":"string"},
            "dose_1": {"type":"boolean"},
            "dose_2":{"type":"boolean"},
            "naturalRecovery":{"type":"boolean"}
          }
        },
        "response":
        {
          "type":"object",
          "properties":
          {
            "status":{"type":"string"},
            "message":{"type":"string"}
          }
        },
        "response_body":
        {
          "type":"object",
          "properties":
          {
            "status":{"type":"string"},
            "message":{"type":"string"},
            "body":
            {
              "type":"array",
              "items":
              {
                "$ref":"#/components/schemas/vaccine"
              }            
            }
          }
        }
        
      }
    },
    "paths":
    {
      "/api/iam":
      {
        "post":
        {
          "description":"Returns a validation.",
          "tags":["Vaccine"],
          "requestBody":
          {
            "description":"Vaccine Information",
            "required":"true",
            "content":
            {
              "application/json":
              {
                "schema":
                {
                  "$ref":"#/components/schemas/vaccine"
                }
              }
            }
          },    
          "responses":
          {
            "200":
            {
              "description":"Validation",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "schema":
                {
                  "$ref":"#/components/schemas/response"
                }
              }
            }
          }
        }
      },
      "/api/isthis/{id}":
      {
        "get":
        {
          "description":"Returns the vaccinated state and date of vaccination (if applicable) of the given ID.",
          "tags":["Vaccine"],
          "parameters":
          [
            {
              "name":"id",
              "in":"path",
              "required":"true",
              "schema":
              {
                "type":"string"
              },
              "description":"User ID."
            }
          ],
          "responses":
          {
            "200":
            {
              "description":"Request was successful.",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            },
            "400":
            {
              "description":"Request was unsuccessful.",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }
      },
      "/api/today":
      {
        "get":
        {
          "description":"Total of vaccines on the day of the request up to the time of request.",
          "tags":["Vaccine"],
          "responses":
          {
            "200":
            {
              "description":"Number of vaccines",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response_body"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }

        }
      },
      "/api/total":
      {
        "get":
        {
          "description":"Total of registed vaccinations.",
          "tags":["Vaccine"],
          "responses":
          {
            "200":
            {
              "description":"Number of vaccines",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response_body"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }
      },
      "/api/totalnaturalrecovery":
      {
        "get":
        {
          "description":"Total of registed natural recoveries.",
          "tags":["Recovered"],
          "responses":
          {
            "200":
            {
              "description":"Number of narturally recovered.",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }
      },
      "/api/vaccineson/{day}":
      {
        "get":
        {
          "description":"Total of vaccines on a given day.",
          "tags":["Vaccine"],
          "parameters":
          [
            {
              "name":"day",
              "in":"path",
              "required":"true",
              "schema":
              {
                "type":"number"
              },
              "description":"Day of the month (DD)"
            },
            {
              "name":"month",
              "in":"query",
              "schema":
              {
                "type":"number"
              },
              "description":"Month, if empty defaults to current month.(MM)"
            },
            {
              "name":"year",
              "in":"query",
              "schema":
              {
                "type":"number"
              },
              "description":"Year, if empty defaults to current year. (YYYY)"
            }
          ],
          "responses":
          {
            "200":
            {
              "description":"Number of vaccines on the given day.",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response_body"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }

      },
      "/api/avg":
      {
        "get":
        {
          "description":"All time avarage of vaccines per day.",
          "tags":["Vaccine"],
          "responses":
          {
            "200":
            {
              "description":"Avarage number of vaccines ever registered.",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }
      },
      "/api/status":
      {
          "get":
          {
            "description":"Status of the API",
            "tags":["API"],
            "responses":
            {
              "200":
              {
                "description":"Status",
                "content":
                {
                  "application/json":
                  {
                    "schema":
                    {
                      "$ref":"#/components/schemas/response"
                    }
                  }
                }
              },
              "400":
              {
                "description":"Error",
                "content":
                {
                  "application/json":
                  {
                    "schema":
                    {
                      "$ref":"#/components/schemas/response"
                    }
                  }
                }
              }
            }
          }
      },
      "/api/dosageavg":
      {
        "get":
        {
          "description":"All time avarege of dosage. (0 to 2)",
          "tags":["Vaccine"],
          "responses":
          {
            "200":
            {
              "description":"Avarage number of doses taken.",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response_body"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }

      },
      "/api/dosage/{id}":
      {
        "post":
        {
          "description":"Updates dosage of a user. Second dose to true.",
          "tags":["Vaccine"],
          "parameters":
          [
            {
              "name":"id",
              "in":"path",
              "required":"true",
              "schema":{"type":"string"},
              "description":"User ID"
            }
          ],
          "content":
          {
            "application/json":
            {
              "schema":
              {
                "$ref":"#/components/schemas/response"
              }
            }
          },
          "responses":
          {
            "200":
            {
              "description":"Dosage Updated",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            },
            "400":
            {
              "description":"Error",
              "content":
              {
                "application/json":
                {
                  "schema":
                  {
                    "$ref":"#/components/schemas/response"
                  }
                }
              }
            }
          }
        }
      }

    }
    
}